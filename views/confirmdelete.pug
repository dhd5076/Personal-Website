extends layout

block content
    div.container
        form.small_submit_form(method='post' action='/post/' + post_data.id + '/delete')
            .form_title
                h3 Delete Post
            .input-wrapper
                center
                    h3 Delete?
                    i " #{post_data.title} "
                div.float_right
                    button.yesno(type='submit') Cancel
                    button.yesno(type='submit') Confirm

